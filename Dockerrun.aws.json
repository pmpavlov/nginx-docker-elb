{
  "AWSEBDockerrunVersion": 2,
    "volumes": [
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx"
      }
    }  
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "ppavlov/nginx-docker",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
       ],
       "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx",
          "readOnly": true
        }
       ]
    }
  ]
}
