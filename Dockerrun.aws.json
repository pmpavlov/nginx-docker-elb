  "AWSEBDockerrunVersion": 1,
  "volumes": [
    {
      "name": "storage",
      "host": {
        "sourcePath": "/media/storage"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx/stable",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "storage",
          "containerPath": "/mnt/storage",
          "readOnly": true
        }
      ]
    }
  ]
}
