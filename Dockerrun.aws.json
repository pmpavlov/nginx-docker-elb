{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-config",
      "host": {
        "sourcePath": "/var/app/current/nginx/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-config",
          "containerPath": "/etc/nginx",
          "readOnly": true
        }
      ]
    }
  ]
}
